@{
    ViewData["Title"] = "Privacy Policy";
}

<form method="post" action="/links/validateDomain" class="container" style="width: 470px">
    <div class="form-group">
        <label class="mb-3">URL to the page containing the product you want to buy:</label>
        <input name="domain" type="url" id="urlInput" class="form-control mb-3">
    </div>
    <div class="form-group">
        <button type="submit" class="d-block w-100 btn btn-primary">Add new product to monitor</button>
    </div>
</form>